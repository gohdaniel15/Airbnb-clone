<div class="listingsDisplay">
  <h1>Results: Listings</h1>
    <% @search.results.each do |l| %>
      <div class="listing-container">

          <div class="listing-image-container">
            <%= image_tag (l.listing_images.first.square.url) %>
          </div>

          <a href="/listings/<%= l.id %>"><h1><%= l.name %></h1></a>
          <h2><%= "#{l.city}, #{l.country}" %></h2>
          <div class="features-container">

            <div class="property-type-container">
              <div class="property-type-image"></div>
              <p><%= l.property_type %></p>
            </div>

            <div class="no-of-guests-container">
              <div class="no-of-guests-image"></div>
              <p><%= l.no_of_guests %> guest(s)</p>
            </div>

            <div class="no-of-beds-container">
              <div class="no-of-beds-image"></div>
              <p><%= l.no_of_beds %> bed(s)</p>
            </div>
          </div>
          <h3>Tags:
            <% l.tags.each do |tag| %>
              <%= tag.name %>
            <% end %>
          </h3>

      </div>
    <% end %>
<%= paginate @search %>
