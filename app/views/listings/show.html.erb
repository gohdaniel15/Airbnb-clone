<div>
  <div class="listing-image-container">
    <%= image_tag (@listing.listing_images.first.square.url) %>
  </div>
  <h1><%= @listing.name %></h1>
  <h2><%= "#{@listing.city}, #{@listing.country}" %></h2>
  <div class="features-container">

    <div class="property-type-container">
      <div class="property-type-image"></div>
      <p><%= @listing.property_type %></p>
    </div>

    <div class="no-of-guests-container">
      <div class="no-of-guests-image"></div>
      <p><%= @listing.no_of_guests %> guest(s)</p>
    </div>

    <div class="no-of-beds-container">
      <div class="no-of-beds-image"></div>
      <p><%= @listing.no_of_beds %> bed(s)</p>
    </div>
  </div>
  <h3>Tags:
    <% @listing.tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  </h3>
  <h3>Reserved on:</h3>
  <%= month_calendar events: @listing.booked_dates do |date, reservation| %>
          <%= date.day %>
  <% end %>
  <% @listing.reservations.each do |lr| %>
    <p><%= lr.start_date %> to <%= lr.end_date %></p>
  <% end %><br>
  <%= link_to "Create a reservation", new_listing_reservation_path(@listing), method: :get %>
</div>
