<%= form_for :listings, url: listings_create_path do |form| %>

<div class="text-field">
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>

  <div class="text-field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="text-field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div class="text-field">
    <%= form.label :country %>
    <%= form.text_field :country %>
  </div>

  <div class="text-field">
    <%= form.label :property_type %>
    <%= form.text_field :property_type %>
  </div>

  <div class="text-field">
    <%= form.label "Number of guests" %>
    <%= form.select :no_of_guests, [1,2,3,4,5,6] %>
  </div>

  <div class="text-field">
    <%= form.label "Number of beds" %>
    <%= form.select :no_of_beds, [1,2,3,4,5,6] %>
  </div>

  <div class="text-field">
    <%= form.label "Number of bathrooms" %>
    <%= form.select :no_of_bathrooms, [1,2,3,4,5,6] %>
  </div>

  <div class="text-field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="text-field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="text-field">
    <%= form.label "Tags" %>
    <%= form.fields_for :tags do |f| %>
    <%= f.text_field :name %>
    <% end %>
  </div>

  <div class="submit-field">
    <%= form.submit %>
  </div>

<% end %>
